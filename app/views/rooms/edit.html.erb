
<% form_for :room, :url => { :action => "update", :id => @room.id } do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title, t("room.title") %><br />
    <%= f.text_field :title, :class => "input_field_width_200" %>
  </p>

  <br />

  <p>
    <%= f.label :hash_tag, t("room.hash_tag") %><br />
    <%= f.text_field :hash_tag, :class => "input_field_width_200" %>
  </p>

  <br />

  <p>
    <%= f.label :mode, t("room.mode") %>：
    <% unless User.level_master?( session[:user_id] ) %>
      <%= @room.mode %>
    <% else %>
      <%= f.select :mode, $mode %>
    <% end %>
  </p>

  <br />

  <p>
    <%= f.label :synchro_flag, t("room.synchro_flag") %>：
    <% unless User.level_master?( session[:user_id] ) %>
      <%= @room.synchro_flag %>
    <% else %>
      <%= f.select :synchro_flag, $on_off %>
    <% end %>
  </p>

  <br />

  <p>
    <%= f.label :keep_flag, t("room.keep_flag") %>：
    <% unless User.level_master?( session[:user_id] ) %>
      <%= @room.keep_flag %>
    <% else %>
      <%= f.select :keep_flag, $on_off %>
    <% end %>
  </p>

  <br />

  <p>
    <%= f.submit t("menu.save"), :disable_with => t("menu.save") %>
  </p>
<% end %>

<br />
<br />

<span class="menu">
  <%= link_to t("menu.list"), { :action => "index" } %>
  <%= link_to t("menu.show"), { :action => "show", :id => @room.id } %>
  <%= link_to t("menu.delete"), { :action => "destroy", :id => @room.id }, :confirm => "「#{@room.title}」を本当に削除してよろしいですか？" %>
</span>
