<%= will_paginate @rooms, :previous_label => 'Prev', :next_label => 'Next', :params => { :action => "index" } %><br />

<table>
  <tr>
    <th><%= t("room.title") %></th>
    <th><%= t("room.hash_tag") %></th>
    <th><%= t("room.mode") %></th>
    <th><%= t("room.synchro_flag") %></th>
    <th><%= t("room.keep_flag") %></th>
    <th><%= t("room.user") %></th>
  </tr>

<% @rooms.each do |room| %>
  <tr class="top_line">
    <td><%= link_to room.title, { :controller => "tweets", :room_id => room.id, :menu => "protect" } %></td>
    <td><%=h room.hash_tag %></td>
    <td><%=h room.mode %></td>
    <td><%=h room.synchro_flag %></td>
    <td><%=h room.keep_flag %></td>
    <td align="center"><%= link_to image_tag( room.user.profile_image_url, :size => t("user.profile_size"), :alt => t("user.icon_alt"), :title => "#{room.user.login}／#{room.user.name}" ), "http://twitter.com/#!/#{room.user.login}", :target => "_blank" unless room.user.blank? %></td>
  </tr>
<% end %>

